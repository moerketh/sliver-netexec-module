{
	"name": "Python NetExec Sliver Dev",
	"build": {
    	"dockerfile": "Dockerfile",
    	"context": "."
  	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"postCreateCommand": "./.devcontainer/post-create.sh",
	"postAttachCommand": "export PATH=\"$HOME/netexec-venv/bin:$HOME/.local/bin:$PATH\" && export PYTHONPATH=\"$PWD/src:$PYTHONPATH\" && . ~/.bashrc",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.pytest",
				"sst-dev.opencode"
			]
		}
	},
	"forwardPorts": [
		31337,   // multiplayer/operator
		80,      // HTTP C2
		443,     // HTTPS C2 (needs root or cap_net_bind_service)
		8080,    // HTTP staging port
		8888     // mTLS default
	]
}